<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/article_user_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            fresco:placeholderImage="@mipmap/qq_icon"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="1dp"
            fresco:viewAspectRatio="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/article_user_img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/article_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_default_name_text"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/article_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="10-17 09:18"
                        android:textSize="11sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_agree_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@mipmap/no_zan_icon"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/fun_test_time_color"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/comment_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="这个图不错，好看"
                android:textColor="@color/quick_text_color"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="2dp"
                android:background="@color/black_alpha_12"></View>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

