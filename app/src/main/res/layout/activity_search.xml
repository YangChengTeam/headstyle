<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fb5161"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:background="@drawable/common_btn_selector"
            android:src="@mipmap/back_normal_icon"/>

        <EditText
            android:id="@+id/search_key"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/search_boder_bg"
            android:drawablePadding="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入关键字搜索"
            android:imeOptions="actionSearch"
            android:paddingBottom="5dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:drawableLeft="@mipmap/search_left_icon"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#d2d2d2"
            android:textCursorDrawable="@null"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/search_btn"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:text="搜索"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/common_btn_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <com.feiyou.headstyle.view.CustomWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

</LinearLayout>
